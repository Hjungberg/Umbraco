@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	var content = (ContentModels.ReadOurStorySection)Model.Content;
}

<section class="py-[4rem] bg-white-100 py-28">
	<div class="container mx-auto px-4 relative z-10">
		<div class="max-w-7xl mx-8 mb-8 px-4 ">
			<p class="text-4xl font-bold justify-center">@content.ReadHeader</p>
			<p class="text-4xl font-bold justify-center">@content.ReadTitle</p>
			<div class="rte">@Html.Raw(content.ReadText)</div>
			<button class="bg-border-gray">Read or Story</button>
			<img src="@content.ReadPicture?.Url()" alt="Alternate Text" class="w-full object-cover" />
		</div>
	</div> 





</section>