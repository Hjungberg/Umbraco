@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage


@{
	var rootContent = Umbraco.ContentAtRoot();
	var siteSettings = rootContent.OfType<SiteSettings>().FirstOrDefault();

	var contactAddress = siteSettings?.ContactAdress ?? "-";
}

<div class="bg-primary">
	<div class="max-w-7xl mx-auto px-4 flex items-center justify-between">
		<p class="text-xs text-neutral">@contactAddress</p>
		<div class="flex">
			@if (siteSettings?.PlatformList != null)
			{
				foreach (var item in siteSettings.PlatformList)
				{
					if (item.Content is SocialMediaItem mediaItem)
					{
						switch(mediaItem.PlatformName?.ToLower())
						{
							case "facebook":
								{
									<a href="@mediaItem.PlatformAccountUrl" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center p-3 text-base text-neutral border-l border-light last:border-r">
										<i class="fab fa-facebook-f"></i>
									</a>
									break;
								}
							case "twitter":
								{
									<a href="@mediaItem.PlatformAccountUrl" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center p-3 text-base text-neutral border-l border-light last:border-r">
										<i class="fab fa-twitter"></i>
									</a>
									break;
								}
							case "linkedin":
								{
									<a href="@mediaItem.PlatformAccountUrl" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center p-3 text-base text-neutral border-l border-light last:border-r">
										<i class="fab fa-linkedin-in"></i>
									</a>
									break;
								}
							case "instagram":
								{
									<a href="@mediaItem.PlatformAccountUrl" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center p-3 text-base text-neutral border-l border-light last:border-r">
										<i class="fab fa-instagram"></i>
									</a>
									break;
								}
							case "youtube":
								{
									<a href="@mediaItem.PlatformAccountUrl" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center p-3 text-base text-neutral border-l border-light last:border-r">
										<i class="fab fa-youtube"></i>
									</a>
									break;
								}
						}
					}
				}
			}

		</div>
	</div>
</div>